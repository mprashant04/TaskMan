<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/sectionHeader"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="@color/list_section_background"
        android:paddingLeft="13dp"
        android:paddingTop="5dp"
        android:paddingRight="3dp"
        android:paddingBottom="3dp"
        android:textColor="@color/list_section_text_color"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/sectionHeaderNote"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:gravity="right"
        android:background="@color/transparent"
        android:paddingLeft="13dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="3dp"
        android:textColor="@color/list_section_note_text_color"
        android:textSize="12sp"
        android:text=""/>

    <ImageView
        android:id="@+id/topGap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/sectionHeader"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topGap"
        android:layout_marginTop="6dp"
        android:layout_marginRight="5dp"
        android:adjustViewBounds="true"
        android:maxWidth="8dp"
        android:maxHeight="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/notification_record" />

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topGap"
        android:layout_gravity="center"
        android:layout_toRightOf="@id/icon"
        android:padding="0dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dueOn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_gravity="center"
        android:layout_toRightOf="@id/icon"
        android:padding="0dp"
        android:textColor="@color/gray_200"
        android:textSize="8sp" />

    <ImageView
        android:id="@+id/bottomGap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp" />
</RelativeLayout>