<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp">

    <!-- ********** Top elements ****************************************************************************************************-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:gravity="bottom"
            android:hint="Enter Title"
            android:inputType="text|textCapSentences"
            android:lineSpacingExtra="-3dp"
            android:maxLength="350"
            android:selectAllOnFocus="true"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/dueOnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_alignParentLeft="true"
            android:onClick="onClickDueOnText"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/toggleAudioAlertFlag"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:longClickable="true"
            android:onClick="onClickInformAboutLongPress"
            android:src="@drawable/bell_filled" />


        <!--        <TextView-->
        <!--            android:id="@+id/tag"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_below="@id/title"-->
        <!--            android:layout_alignParentRight="true"-->
        <!--            android:layout_toRightOf="@id/dueOnText"-->
        <!--            android:gravity="right"-->
        <!--            android:textSize="15sp" />-->

        <Spinner
            android:id="@+id/tagSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/toggleAudioAlertFlag"
            android:background="@null" />


        <!--  section separator -->
        <Button
            android:id="@+id/boundaryTop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/toggleAudioAlertFlag"
            android:layout_marginTop="@dimen/editDialogSectionMargin" />

        <!-- ************ add time buttons**********************************************************  -->
        <Button
            android:id="@+id/addTimeNow"
            android:layout_width="@dimen/time_button_width"
            android:layout_height="@dimen/time_button_height"
            android:layout_below="@id/boundaryTop"
            android:onClick="onClickTimeButton"
            android:tag="add_minutes_0" />

        <Button
            android:id="@+id/addTime30Min"
            android:layout_width="@dimen/time_button_width"
            android:layout_height="@dimen/time_button_height"
            android:layout_below="@id/boundaryTop"
            android:layout_toRightOf="@id/addTimeNow"
            android:onClick="onClickTimeButton"
            android:tag="add_minutes_30" />

        <Button
            android:id="@+id/addTime1Hr"
            android:layout_width="@dimen/time_button_width"
            android:layout_height="@dimen/time_button_height"
            android:layout_below="@id/boundaryTop"
            android:layout_toRightOf="@id/addTime30Min"
            android:onClick="onClickTimeButton"
            android:tag="add_minutes_60" />

        <Button
            android:id="@+id/addTime3Hr"
            android:layout_width="@dimen/time_button_width"
            android:layout_height="@dimen/time_button_height"
            android:layout_below="@id/boundaryTop"
            android:layout_toRightOf="@id/addTime1Hr"
            android:onClick="onClickTimeButton"
            android:tag="add_minutes_180" />

        <Button
            android:id="@+id/addTime6Hr"
            android:layout_width="@dimen/time_button_width"
            android:layout_height="@dimen/time_button_height"
            android:layout_below="@id/boundaryTop"
            android:layout_toRightOf="@id/addTime3Hr"
            android:onClick="onClickTimeButton"
            android:tag="add_minutes_360" />

        <Button
            android:id="@+id/timeSomeDay"
            android:layout_width="@dimen/time_button_width"
            android:layout_height="@dimen/time_button_height"
            android:layout_below="@id/boundaryTop"
            android:layout_toRightOf="@id/addTime6Hr"
            android:longClickable="true"
            android:onClick="onClickInformAboutLongPress"
            android:tag="set_time_some_day" />

        <!--  section separator -->
        <Button
            android:id="@+id/boundaryAddTime"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/addTimeNow"
            android:layout_marginTop="@dimen/editDialogSectionMargin" />

        <!-- ************ Time buttons**********************************************************  -->
        <!--  row 1 -->
        <Button
            android:id="@+id/time6"
            android:layout_width="@dimen/time_button_width"
            android:layout_height="@dimen/time_button_height"
            android:layout_below="@id/boundaryAddTime"
            android:onClick="onClickTimeButton"
            android:tag="time_0" />

        <Button
            android:id="@+id/time7"
            android:layout_width="@dimen/time_button_width"
            android:layout_height="@dimen/time_button_height"
            android:layout_below="@id/boundaryAddTime"
            android:layout_toRightOf="@id/time6"
            android:onClick="onClickTimeButton"
            android:tag="time_7" />

        <Button
            android:id="@+id/time8"
