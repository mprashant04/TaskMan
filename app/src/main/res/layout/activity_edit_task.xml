            android:layout_below="@id/time6"
            android:layout_toRightOf="@id/time14"
            android:onClick="onClickTimeButton"
            android:tag="time_15" />

        <Button
            android:id="@+id/time16"
            android:layout_width="@dimen/time_button_width"
            android:layout_height="@dimen/time_button_height"
            android:layout_below="@id/time6"
            android:layout_toRightOf="@id/time15"
            android:onClick="onClickTimeButton"
            android:tag="time_16" />

        <Button
            android:id="@+id/time17"
            android:layout_width="@dimen/time_button_width"
            android:layout_height="@dimen/time_button_height"
            android:layout_below="@id/time6"
            android:layout_toRightOf="@id/time16"
            android:onClick="onClickTimeButton"
            android:tag="time_17" />

        <!--  row 3 -->
        <Button
            android:id="@+id/time18"
            android:layout_width="@dimen/time_button_width"
            android:layout_height="@dimen/time_button_height"
            android:layout_below="@id/time12"
            android:onClick="onClickTimeButton"
            android:tag="time_18" />

        <Button
            android:id="@+id/time19"
            android:layout_width="@dimen/time_button_width"
