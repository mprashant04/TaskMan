            android:layout_below="@id/time12"
            android:layout_toRightOf="@id/time18"
            android:onClick="onClickTimeButton"
            android:tag="time_19" />

        <Button
            android:id="@+id/time20"
            android:layout_width="@dimen/time_button_width"
            android:layout_height="@dimen/time_button_height"
            android:layout_below="@id/time12"
            android:layout_toRightOf="@id/time19"
            android:onClick="onClickTimeButton"
            android:tag="time_20" />

        <Button
            android:id="@+id/time21"
            android:layout_width="@dimen/time_button_width"
            android:layout_height="@dimen/time_button_height"
            android:layout_below="@id/time12"
            android:layout_toRightOf="@id/time20"
            android:onClick="onClickTimeButton"
            android:tag="time_21" />

        <Button
            android:id="@+id/time22"
            android:layout_width="@dimen/time_button_width"
            android:layout_height="@dimen/time_button_height"
            android:layout_below="@id/time12"
            android:layout_toRightOf="@id/time21"
            android:onClick="onClickTimeButton"
            android:tag="time_22" />

        <Button
            android:id="@+id/time23"
            android:layout_width="@dimen/time_button_width"
            android:layout_height="@dimen/time_button_height"
            android:layout_below="@id/time12"
            android:layout_toRightOf="@id/time22"
            android:onClick="onClickTimeButton"
            android:tag="time_23" />


        <!--  section separator -->
        <Button
            android:id="@+id/boundaryTime"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/time23"
            android:layout_marginTop="@dimen/editDialogSectionMargin" />


        <!-- ************ anchor date **********************************************************  -->
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/relative_layout_date_controls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/boundaryTime"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <Button
                android:id="@+id/anchor_day_0"
                android:layout_width="@dimen/time_button_width"
                android:layout_height="@dimen/time_button_height"
                android:onClick="onClickAnchorDayButton"
                android:tag="anchor_day_0" />

            <Button
                android:id="@+id/anchor_day_1"
                android:layout_width="@dimen/time_button_width"
                android:layout_height="@dimen/time_button_height"
                android:layout_toRightOf="@id/anchor_day_0"
                android:onClick="onClickAnchorDayButton"
                android:tag="anchor_day_1" />

            <Button
                android:id="@+id/anchor_day_2"
                android:layout_width="@dimen/time_button_width"
                android:layout_height="@dimen/time_button_height"
                android:layout_toRightOf="@id/anchor_day_1"
                android:onClick="onClickAnchorDayButton"
                android:tag="anchor_day_2" />

            <Button
                android:id="@+id/anchor_day_3"
                android:layout_width="@dimen/time_button_width"
                android:layout_height="@dimen/time_button_height"
                android:layout_toRightOf="@id/anchor_day_2"
                android:onClick="onClickAnchorDayButton"
                android:tag="anchor_day_3" />

            <Button
                android:id="@+id/anchor_day_4"
                android:layout_width="@dimen/time_button_width"
                android:layout_height="@dimen/time_button_height"
                android:layout_toRightOf="@id/anchor_day_3"
                android:onClick="onClickAnchorDayButton"
                android:tag="anchor_day_4" />

            <Button
                android:id="@+id/anchor_day_5"
                android:layout_width="@dimen/time_button_width"
                android:layout_height="@dimen/time_button_height"
                android:layout_toRightOf="@id/anchor_day_4"
                android:onClick="onClickAnchorDayButton"
                android:tag="anchor_day_5" />

            <Button
                android:id="@+id/anchor_day_6"
                android:layout_width="@dimen/time_button_width"
                android:layout_height="@dimen/time_button_height"
                android:layout_below="@id/anchor_day_0"
                android:onClick="onClickAnchorDayButton"
                android:tag="anchor_day_6" />

            <Button
                android:id="@+id/anchor_day_7"
                android:layout_width="@dimen/time_button_width"
                android:layout_height="@dimen/time_button_height"
                android:layout_below="@id/anchor_day_0"
                android:layout_toRightOf="@id/anchor_day_6"
                android:onClick="onClickAnchorDayButton"
                android:tag="anchor_day_7" />

            <Button
                android:id="@+id/anchor_day_8"
                android:layout_width="@dimen/time_button_width"
                android:layout_height="@dimen/time_button_height"
                android:layout_below="@id/anchor_day_0"
                android:layout_toRightOf="@id/anchor_day_7"
                android:onClick="onClickAnchorDayButton"
                android:tag="anchor_day_8" />

            <Button
                android:id="@+id/anchor_day_9"
                android:layout_width="@dimen/time_button_width"
                android:layout_height="@dimen/time_button_height"
                android:layout_below="@id/anchor_day_0"
                android:layout_toRightOf="@id/anchor_day_8"
                android:onClick="onClickAnchorDayButton"
                android:tag="anchor_day_9" />

            <Button
                android:id="@+id/anchor_day_10"
                android:layout_width="@dimen/time_button_width"
                android:layout_height="@dimen/time_button_height"
                android:layout_below="@id/anchor_day_0"
                android:layout_toRightOf="@id/anchor_day_9"
                android:onClick="onClickAnchorDayButton"
                android:tag="anchor_day_10" />

            <Button
                android:id="@+id/anchor_day_11"
                android:layout_width="@dimen/time_button_width"
                android:layout_height="@dimen/time_button_height"
                android:layout_below="@id/anchor_day_0"
                android:layout_toRightOf="@id/anchor_day_10"
                android:onClick="onClickAnchorDayButton"
                android:tag="anchor_day_11" />

            <Button
                android:id="@+id/anchor_day_12"
                android:layout_width="@dimen/time_button_width"
                android:layout_height="@dimen/time_button_height"
                android:layout_below="@id/anchor_day_6"
                android:onClick="onClickAnchorDayButton"
                android:tag="anchor_day_12" />

            <Button
                android:id="@+id/anchor_day_13"
                android:layout_width="@dimen/time_button_width"
                android:layout_height="@dimen/time_button_height"
                android:layout_below="@id/anchor_day_6"
                android:layout_toRightOf="@id/anchor_day_12"
                android:onClick="onClickAnchorDayButton"
                android:tag="anchor_day_13" />

            <Button
                android:id="@+id/anchor_day_14"
                android:layout_width="@dimen/time_button_width"
                android:layout_height="@dimen/time_button_height"
                android:layout_below="@id/anchor_day_6"
                android:layout_toRightOf="@id/anchor_day_13"
                android:onClick="onClickAnchorDayButton"
                android:tag="anchor_day_14" />

            <Button
                android:id="@+id/anchor_day_15"
                android:layout_width="@dimen/time_button_width"
                android:layout_height="@dimen/time_button_height"
                android:layout_below="@id/anchor_day_6"
                android:layout_toRightOf="@id/anchor_day_14"
                android:onClick="onClickAnchorDayButton"
                android:tag="anchor_day_15" />

            <Button
                android:id="@+id/anchor_day_16"
                android:layout_width="@dimen/time_button_width"
                android:layout_height="@dimen/time_button_height"
                android:layout_below="@id/anchor_day_6"
                android:layout_toRightOf="@id/anchor_day_15"
                android:onClick="onClickAnchorDayButton"
                android:tag="anchor_day_16" />

            <Button
                android:id="@+id/customAnchorDay"
                android:layout_width="@dimen/time_button_width"
                android:layout_height="@dimen/time_button_height"
                android:layout_below="@id/anchor_day_6"
                android:layout_toRightOf="@id/anchor_day_16"
                android:onClick="onClickCustomAnchorDayButton"
                android:text="Custom" />

            <!--  section separator -->
            <Button
                android:id="@+id/boundaryDate"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_below="@id/anchor_day_12"
                android:layout_marginTop="@dimen/editDialogSectionMargin" />

        </RelativeLayout>

        <!-- ************ custom date selection **********************************************************  -->
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/relative_layout_date_custom_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/boundaryTime"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/selectedCustomDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:onClick="onClickCustomAnchorDayButton"
                android:layout_marginTop="40dp"
                android:textSize="22sp" />

        </RelativeLayout>

        <!-- ************ bottom area**********************************************************  -->

        <ImageButton
            android:id="@+id/deleteTask"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/relative_layout_date_controls"
            android:backgroundTint="@color/transparent"
            android:longClickable="true"
            android:onClick="onClickInformAboutLongPress"
            android:src="@drawable/recycle_bin"
            android:tint="@color/red" />

        <ImageButton
            android:id="@+id/saveTask"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/relative_layout_date_controls"
            android:layout_toRightOf="@id/deleteTask"
            android:longClickable="true"
            android:onClick="onClickInformAboutLongPress"
            android:src="@drawable/save1" />

        <ImageButton
            android:id="@+id/expandCompleteTask"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@id/relative_layout_date_controls"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/task_expand_complete_button_background"
            android:longClickable="true"
            android:onClick="onClickInformAboutLongPress"
            android:src="@drawable/unfold_more" />

        <ImageButton
            android:id="@+id/completeTask"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@id/relative_layout_date_controls"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/task_complete_button_background"
            android:longClickable="true"
            android:onClick="onClickInformAboutLongPress"
            android:src="@drawable/done"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/multiEditSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/completeTask"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:longClickable="true"
            android:onClick="onClickInformAboutLongPress"
            android:textSize="15sp" />


    </RelativeLayout>


</LinearLayout>

